# Database
DATABASE_URL="file:./dev.db"

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here-change-in-production"

# Environment
NODE_ENV="development"

# Email Service (Phase F3)
# Options: "mock" (development), "resend", "sendgrid"
EMAIL_PROVIDER="mock"

# Email API Key (Required for resend/sendgrid)
# Resend: Get from https://resend.com/api-keys
# SendGrid: Get from https://app.sendgrid.com/settings/api_keys
# EMAIL_API_KEY="your-api-key-here"

# Email From Address
EMAIL_FROM="noreply@temple.example.com"
EMAIL_FROM_NAME="Temple Platform"
