  FAIR
  POOR
  DAMAGED
  UNKNOWN
}

enum AssetCategory {
  EQUIPMENT      // Audio/Visual, computers, projectors
  FURNITURE      // Chairs, tables, podiums
  VEHICLE        // Church vans, buses
  BUILDING       // Building-related assets
  SUPPLIES       // Office supplies, consumables
  INSTRUMENTS    // Musical instruments
  LITURGICAL     // Religious items, vestments
  KITCHEN        // Kitchen equipment
  GROUNDS        // Outdoor equipment, tools
  OTHER
}

enum AssetEventType {
  CREATED
  UPDATED
  CHECKED_OUT
  CHECKED_IN
  MAINTENANCE_SCHEDULED
  MAINTENANCE_COMPLETED
  CONDITION_UPDATED
  LOCATION_CHANGED
  RESERVED
  UNRESERVED
  RETIRED
  DISPOSED
}

model Asset {
  id                String          @id @default(cuid())
  tenantId          String
  tenant            Tenant          @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  
  // Basic Info
  name              String
  description       String?
  category          AssetCategory   @default(OTHER)
  serialNumber      String?
  barcode           String?         // For barcode/QR scanning
  model             String?
  manufacturer      String?
  
  // Status & Condition
  status            AssetStatus     @default(AVAILABLE)
  condition         AssetCondition  @default(GOOD)
  conditionNotes    String?
  
  // Location
  location          String?         // Building, room, area
  storageLocation   String?         // Where it's stored when not in use
  
  // Financial
  purchaseDate      DateTime?
  purchasePrice     Float?
  purchasedFrom     String?         // Vendor
  warrantyExpires   DateTime?
  currentValue      Float?          // For depreciation tracking
  depreciationType  String?         // "straight-line", "declining-balance"
  usefulLifeYears   Int?
  salvageValue      Float?
  
  // Assignment
  assignedToId      String?         // User currently responsible
  assignedTo        User?           @relation("AssetAssignedTo", fields: [assignedToId], references: [id])
  assignedAt        DateTime?
  dueBackAt         DateTime?       // When checked-out item is due
  
  // Maintenance
  lastMaintenanceAt DateTime?
  nextMaintenanceAt DateTime?
  maintenanceNotes  String?
  
  // Media
  photos            Json?           // Array of photo URLs
  documents         Json?           // Array of document URLs (manuals, receipts)
  
  // Tags for filtering
  tags              Json?           // Array of strings
  
  // Audit
  createdBy         String?
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt
  retiredAt         DateTime?
  disposedAt        DateTime?
  deletedAt         DateTime?
  
  // Relations
  events            AssetEvent[]
  
  @@unique([tenantId, barcode])
  @@index([tenantId, status])
  @@index([tenantId, category])
  @@index([tenantId, assignedToId])
  @@index([tenantId, nextMaintenanceAt])
}

model AssetEvent {
  id              String          @id @default(cuid())
  assetId         String
  asset           Asset           @relation(fields: [assetId], references: [id], onDelete: Cascade)
  
  eventType       AssetEventType
  description     String?
  notes           String?
  
  // For check-in/out
  userId          String?         // User involved (assignee or performer)
  user            User?           @relation("AssetEventUser", fields: [userId], references: [id])
  previousStatus  String?
  newStatus       String?
  previousCondition String?
  newCondition    String?
  
  // For maintenance
  maintenanceCost Float?
  maintenanceVendor String?
  
  // Location change
  previousLocation String?
  newLocation     String?
  
  performedBy     String?         // Admin/staff who performed action
  performedAt     DateTime        @default(now())
  dueBackAt       DateTime?       // For checkouts
  
  createdAt       DateTime        @default(now())
  
  @@index([assetId, createdAt])
  @@index([userId])
}

// --- WORKBOARD ENUMS ---

enum TaskStatus {
  TODO
  IN_PROGRESS
  REVIEW
  DONE
  BLOCKED
  ARCHIVED
}

enum TaskPriority {
  LOW
  NORMAL
  HIGH
  URGENT
}

enum TaskRecurrence {
  NONE
  DAILY
  WEEKLY
  BIWEEKLY
  MONTHLY
  QUARTERLY
  YEARLY
}

// --- WORKBOARD MODELS ---

model Task {
  id              String          @id @default(cuid())
  tenantId        String
  tenant          Tenant          @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  
  title           String
  description     String?
  
  status          TaskStatus      @default(TODO)
  priority        TaskPriority    @default(NORMAL)
  
  // Assignment
  assigneeId      String?
  assignee        User?           @relation("TaskAssignee", fields: [assigneeId], references: [id])
  createdById     String
  createdBy       User            @relation("TaskCreator", fields: [createdById], references: [id])
  
  // Dates
  dueDate         DateTime?
  startDate       DateTime?
  completedAt     DateTime?
  
  // Recurrence
  recurrence      TaskRecurrence  @default(NONE)
  recurrenceEndDate DateTime?
  parentTaskId    String?         // For recurring task instances
  parentTask      Task?           @relation("RecurringTasks", fields: [parentTaskId], references: [id])
  childTasks      Task[]          @relation("RecurringTasks")
  
  // Organization
  labels          String?         // JSON array of labels
  orderIndex      Int             @default(0)
  boardColumn     String?         // Custom column name if using custom columns
  
  // Attachments
  attachments     String?         // JSON array of attachment URLs
  
  // Timestamps
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  deletedAt       DateTime?
  
  // Relations
  comments        TaskComment[]
  activities      TaskActivity[]
  
  @@index([tenantId, status])
  @@index([tenantId, assigneeId])
  @@index([tenantId, dueDate])
  @@index([tenantId, priority])
  @@index([tenantId, orderIndex])
}

model TaskComment {
  id              String          @id @default(cuid())
  taskId          String
  task            Task            @relation(fields: [taskId], references: [id], onDelete: Cascade)
  
  authorId        String
  author          User            @relation(fields: [authorId], references: [id])
  
  content         String
  mentions        String?         // JSON array of mentioned user IDs
  
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  deletedAt       DateTime?
  
  @@index([taskId, createdAt])
  @@index([authorId])
}

model TaskActivity {
  id              String          @id @default(cuid())
  taskId          String
  task            Task            @relation(fields: [taskId], references: [id], onDelete: Cascade)
  
  userId          String
  user            User            @relation(fields: [userId], references: [id])
  
  action          String          // e.g., "status_changed", "assigned", "due_date_set", "priority_changed"
  previousValue   String?
  newValue        String?
  
  createdAt       DateTime        @default(now())
  
  @@index([taskId, createdAt])
  @@index([userId])
}

// --- TICKETING ENUMS ---

enum TicketStatus {
  NEW
  TRIAGED
  IN_PROGRESS
  WAITING
  RESOLVED
  CLOSED
}

enum TicketPriority {
  LOW
  NORMAL
  HIGH
  URGENT
}

enum TicketCategory {
  GENERAL
  TECHNICAL
  BILLING
  MEMBERSHIP
  FACILITIES
  EVENTS
  OTHER
}

enum TicketSource {
  WEB_FORM
  EMAIL
  PHONE
  IN_PERSON
}

// --- TICKETING MODELS ---

model Ticket {
  id              String          @id @default(cuid())
  tenantId        String
  tenant          Tenant          @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  
  ticketNumber    Int             // Sequential per tenant
  subject         String
  description     String
  
  status          TicketStatus    @default(NEW)
  priority        TicketPriority  @default(NORMAL)
  category        TicketCategory  @default(GENERAL)
  source          TicketSource    @default(WEB_FORM)
  
  // Requester info (may or may not be a user)
  requesterId     String?
  requester       User?           @relation("TicketRequester", fields: [requesterId], references: [id])
  requesterName   String          // For non-user submissions
  requesterEmail  String
  requesterPhone  String?
  
  // Assignment
  assigneeId      String?
  assignee        User?           @relation("TicketAssignee", fields: [assigneeId], references: [id])
  
  // SLA
  slaResponseDue  DateTime?
  slaResolveDue   DateTime?
  slaBreached     Boolean         @default(false)
  firstResponseAt DateTime?
  
  // Attachments
  attachments     String?         // JSON array of attachment URLs
  
  // Timestamps
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  resolvedAt      DateTime?
  closedAt        DateTime?
  deletedAt       DateTime?
  
  // Relations
  updates         TicketUpdate[]
  
  @@unique([tenantId, ticketNumber])
  @@index([tenantId, status])
  @@index([tenantId, priority])
  @@index([tenantId, assigneeId])
  @@index([tenantId, createdAt])
  @@index([requesterEmail])
}

model TicketUpdate {
  id              String          @id @default(cuid())
  ticketId        String
  ticket          Ticket          @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  
  authorId        String?
  author          User?           @relation(fields: [authorId], references: [id])
  authorName      String          // For display
  
  content         String
  isInternal      Boolean         @default(false) // Internal notes vs public replies
  isSystemGenerated Boolean       @default(false) // For status change messages
  
  // For status changes
  previousStatus  String?
  newStatus       String?
  
  attachments     String?         // JSON array
  
  createdAt       DateTime        @default(now())
  
  @@index([ticketId, createdAt])
  @@index([authorId])
}

// --- MEMBER NOTES ENUMS ---

enum NoteCategory {
  GENERAL
  CARE
  HOSPITAL
  MENTORSHIP
  PERSONAL_CARE
  COUNSELING
  SUPPORT
  FOLLOW_UP
}

enum NoteVisibility {
  PRIVATE       // Only author
  STAFF         // Staff and above
  LEADERSHIP    // Leader and admin
  ADMIN_ONLY    // Admin only
}

enum FollowUpStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  SKIPPED
  ESCALATED
}

// --- MEMBER NOTES MODELS ---

model MemberNote {
  id              String          @id @default(cuid())
  tenantId        String
  tenant          Tenant          @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  
  // The member this note is about
  memberId        String
  member          User            @relation("NotesAboutMember", fields: [memberId], references: [id])
  
  // Author of the note
  authorId        String
  author          User            @relation("NotesAuthoredBy", fields: [authorId], references: [id])
  
  category        NoteCategory    @default(GENERAL)
  visibility      NoteVisibility  @default(STAFF)
  
  title           String?
  content         String
  
  // Follow-up tracking
  followUpDate    DateTime?
  followUpStatus  FollowUpStatus?
  assignedToId    String?
  assignedTo      User?           @relation("NotesAssignedTo", fields: [assignedToId], references: [id])
  escalatedToId   String?
  escalatedTo     User?           @relation("NotesEscalatedTo", fields: [escalatedToId], references: [id])
  
  // Recurrence
  isRecurring     Boolean         @default(false)
  recurrenceRule  String?         // e.g., "WEEKLY", "MONTHLY"
  recurrenceEnd   DateTime?
  
  // Attachments and metadata
  attachments     String?         // JSON array of URLs
  tags            String?         // JSON array of tags
  
  // Linked entities
  linkedTaskId    String?
  linkedTicketId  String?
  
  // Timestamps
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  completedAt     DateTime?
  deletedAt       DateTime?
  
  // Follow-up items
  followUps       NoteFollowUp[]
  
  @@index([tenantId, memberId])
  @@index([tenantId, category])
  @@index([tenantId, followUpDate])
  @@index([tenantId, assignedToId])
  @@index([authorId])
}

model NoteFollowUp {
  id              String          @id @default(cuid())
  noteId          String
  note            MemberNote      @relation(fields: [noteId], references: [id], onDelete: Cascade)
  
  title           String
  description     String?
  dueDate         DateTime
  priority        String          @default("MEDIUM")  // LOW, MEDIUM, HIGH, URGENT
  status          String          @default("PENDING") // PENDING, IN_PROGRESS, COMPLETED, CANCELLED
  
  assignedToId    String?
  assignedTo      User?           @relation("NoteFollowUpAssignedTo", fields: [assignedToId], references: [id])
  
  completedAt     DateTime?
  completedById   String?
  completedBy     User?           @relation("NoteFollowUpCompletedBy", fields: [completedById], references: [id])
  completedNotes  String?
  
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  
  @@index([noteId])
  @@index([assignedToId])
  @@index([dueDate])
  @@index([status])
}

model HospitalVisit {
  id              String          @id @default(cuid())
  tenantId        String
  tenant          Tenant          @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  
  // The member being visited
  memberId        String
  member          User            @relation("HospitalVisitsFor", fields: [memberId], references: [id])
  
  // Visitor (staff/leader)
  visitorId       String
  visitor         User            @relation("HospitalVisitsMadeBy", fields: [visitorId], references: [id])
  
  // Visit details
  hospitalName    String?
  roomNumber      String?
  visitDate       DateTime
  duration        Int?            // Minutes
  
  // Checklist
  supportOffered  Boolean         @default(false)
  serviceProvided Boolean         @default(false)
  familyContacted Boolean         @default(false)
  
  notes           String?
  outcome         String?         // e.g., "Patient recovering well", "Needs follow-up"
  nextSteps       String?
  
  // Follow-up
  followUpDate    DateTime?
  followUpAssignedToId String?
  followUpAssignedTo   User?      @relation("HospitalVisitFollowUp", fields: [followUpAssignedToId], references: [id])
  
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  
  @@index([tenantId, memberId])
  @@index([tenantId, visitDate])
  @@index([visitorId])
}

